{% extends 'base.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 style="text-align: center" class="my-5">Message index</h1>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Texte</th>
                <th>Date de création</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for message in messages %}
                <tr>
                    <td>{{ message.id }}</td>
                    <td>{{ message.text }}</td>
                    <td>{{ message.dateCreate ? message.dateCreate|date('Y-m-d') : '' }}</td>
                    <td>
                        <a href="{{ path('message_show', {'id': message.id}) }}">Voir</a> /
                        <a href="{{ path('message_edit', {'id': message.id}) }}">modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun message trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('message_new') }}">Nouveau message</a>
    </div>
{% endblock %}