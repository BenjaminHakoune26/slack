{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 style="text-align: center" class="my-5">Message</h1>

        <table class="table table-striped table-hover">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ message.text }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ message.dateCreate ? message.dateCreate|date('Y-m-d') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('message_index') }}">Retour à la liste</a> /

        <a href="{{ path('message_edit', {'id': message.id}) }}">modifier</a>

        {{ include('message/_delete_form.html.twig') }}
    </div>
{% endblock %}
